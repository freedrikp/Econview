<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="jar" name="Create Runnable Jar for Project Econview with libraries in sub-folder">
  <property name="cp-compile" value=".:lib/jcalendar-1.4.jar:lib/jcommon-1.0.23.jar:lib/jdatepicker-1.3.4-javadoc.jar:lib/jdatepicker-1.3.4-sources.jar:lib/jdatepicker-1.3.4.jar:lib/jfreechart-1.0.19.jar:lib/sqlite-jdbc-3.8.11.1.jar" />

  <property name="cp-jar" value=". lib/jcalendar-1.4.jar lib/jcommon-1.0.23.jar lib/jdatepicker-1.3.4-javadoc.jar lib/jdatepicker-1.3.4-sources.jar lib/jdatepicker-1.3.4.jar lib/jfreechart-1.0.19.jar lib/sqlite-jdbc-3.8.11.1.jar" />

  <target name="compile">
    <javac srcdir="src" destdir="bin" includeantruntime="false" classpath="${cp-compile}" />
  </target>

  <target name="clean">
    <!-- <delete>
      <fileset dir="bin" includes="**/*.class"/>
    </delete> -->
    <delete dir="EconView"/>
    <delete dir="bin/se"/>
  </target>

  <target name="jar" depends="compile">
    <delete dir="EconView"/>
    <mkdir dir="EconView"/>
    <jar destfile="EconView/EconView.jar">
      <manifest>
        <attribute name="Main-Class" value="se.freedrikp.econview.gui.Main"/>
        <attribute name="Class-Path" value="${cp-jar}"/>
      </manifest>
      <fileset dir="bin"/>
    </jar>
    <delete dir="EconView/lib"/>
    <mkdir dir="EconView/lib"/>
    <copy file="lib/jcalendar-1.4.jar" todir="EconView/lib"/>
    <copy file="lib/jcommon-1.0.23.jar" todir="EconView/lib"/>
    <copy file="lib/jdatepicker-1.3.4-javadoc.jar" todir="EconView/lib"/>
    <copy file="lib/jdatepicker-1.3.4-sources.jar" todir="EconView/lib"/>
    <copy file="lib/jdatepicker-1.3.4.jar" todir="EconView/lib"/>
    <copy file="lib/jfreechart-1.0.19.jar" todir="EconView/lib"/>
    <copy file="lib/sqlite-jdbc-3.8.11.1.jar" todir="EconView/lib"/>

    <copy file="swedish.lang" todir="EconView"/>
    <!--<copy file="english.lang" todir="EconView"/>
    <copy file="econview.conf" todir="EconView"/> -->

  </target>
</project>
